<body>

    <div style="background-color: skyblue;" class="p-4">
        <h4 class="p-2" style="float: left;">Welcome </h4>
        <div class="p-4">
      <a href="/" > <button class="btn btn-danger" style="float: right;" >Logout</button></a>
       </div>
    </div>
    </div>
  {{#each user}}
  <section style="padding: 4em;">
      <h4 class="" style="color: gray;">Available food</h4>
      <div class="table-responsive p-4">

          <table class="table table-hover">
              <thead>
                  <tr>
                      <th>Meal Type</th>
                      <th>Items in plate</th>
                      <th>Quantity of food</th>
                      <th>Get food</th>
                  </tr>
              </thead>

              <tbody>
                <tr>
                   <td> {{meal_type}}</td>
                  <td> {{item_name}} </td>
                   <td> {{quantity}} </td>
                   <td> {{rate}} </td>

                </tr>

              </tbody>
          </table>
            <a href="/delete/{{_id}}" class="btn btn-success">Delete</a>
      </div>
  </section>
{{/each}}
